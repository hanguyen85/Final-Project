<main class="content px-3 py-2">
    <h2>Update Reservation</h2>
    <div class="container-fluid bg-light border border-1">
        <form action="/manage/updateReservation/{{reservation._id}}" method="post">
            <div class="modal-body">
                <input type="hidden" name="id" value="{{reservation._id}}">
                <div class="mb-3">
                    <label for="roomNumber" class="form-label">Room Number</label>
                    <input name="roomNumber" type="text" class="form-control" id="roomNumber"
                        value="{{room.roomNumber}}" disabled>
                </div>
                <div class="mb-3">
                    <label for="user" class="form-label">Username</label>
                    <input name="user" type="text" class="form-control" id="user" value="{{user.email}}" disabled>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status reservation</label>
                    <select name="status" id='dropdown1' class='form-select'>
                        <option value="using" {{#if (eq room.status 'using' )}}selected{{/if}}>
                            Using
                        </option>
                        <option value="pepart" {{#if (eq room.status 'pepart' )}}selected{{/if}}>
                            Pepart
                        </option>
                    </select>
                </div>
                <div class="modal-footer mb-2">
                    <input type="submit" class="btn btn-warning" value="Update room"></input>
                </div>
        </form>
    </div>
</main>